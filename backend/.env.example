# AllFence Backend Environment Variables
# Copy this to .env and fill in your values

# Flask Configuration
FLASK_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
# For local development, leave commented to use SQLite
# For production with Neon/Supabase/etc, uncomment and set your PostgreSQL connection string
# DATABASE_URL=postgresql://user:password@host:port/database

# CORS Configuration
# For development, use * to allow all origins
# For production, set to your frontend URL (e.g., https://your-app.vercel.app)
CORS_ORIGINS=*

# JWT Configuration  
JWT_SECRET_KEY=your-jwt-secret-key-here

# Server Configuration
HOST=0.0.0.0
PORT=5001
